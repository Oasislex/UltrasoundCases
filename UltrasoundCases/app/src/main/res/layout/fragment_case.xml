<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="by.scherbakov.ultrasoundcases.CaseFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/case_title_label"
        style="?android:listSeparatorTextViewStyle"/>
    <EditText
        android:id="@+id/case_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/case_title_hint" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/case_details_label"
        style="?android:listSeparatorTextViewStyle"/>
    <EditText
        android:id="@+id/case_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/case_description_hint" />

</LinearLayout>
